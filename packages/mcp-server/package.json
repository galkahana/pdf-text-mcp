{
  "name": "@pdf-text-mcp/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for PDF text extraction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pdf-text-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "npx --prefix ../.. tsc -p tsconfig.json",
    "dev": "npx --prefix ../.. tsc -p tsconfig.json --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:manual": "node manual-tests/protocol-integration.js",
    "test:all": "npm test && npm run test:manual",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@pdf-text-mcp/pdf-parser": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "pdf",
    "text-extraction",
    "server"
  ],
  "author": "Gal Kahana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galkahana/pdf-text-mcp.git",
    "directory": "packages/mcp-server"
  }
}

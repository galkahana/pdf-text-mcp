{
  "name": "@pdf-text-mcp/pdf-parser",
  "version": "1.0.0",
  "description": "TypeScript wrapper for pdf-text-extraction C++ library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:native && tsc",
    "build:native": "cmake-js compile",
    "rebuild": "cmake-js rebuild",
    "clean": "rimraf dist build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:manual": "node manual-tests/integration-test.js",
    "test:all": "npm test && npm run test:manual",
    "dev": "tsc --watch"
  },
  "files": [
    "dist",
    "src",
    "CMakeLists.txt",
    "binding.gyp"
  ],
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "cmake-js": "^7.2.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "text-extraction",
    "parsing",
    "native",
    "addon"
  ],

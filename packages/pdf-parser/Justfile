# PDF Parser Package - Build and Test Commands

# Build the package (native addon + TypeScript)
build:
    npm run build

# Build only the native C++ addon
build-native:
    cmake-js compile

# Rebuild the native addon from scratch
rebuild:
    cmake-js rebuild

# Run tests
test:
    npm test

# Run tests in watch mode
test-watch:
    npm run test:watch

# Run tests with coverage
test-coverage:
    npm run test:coverage

# Run manual integration tests
test-manual:
    npm run test:manual

# Run all tests (unit + manual)
test-all:
    npm run test:all

# Clean build artifacts
clean:
    npm run clean

# Lint check
lint:
    npm run lint

# Auto-fix linting issues
lint-fix:
    npm run lint -- --fix

# Format code
format:
    npm run format

# Check formatting without modifying
format-check:
    npx prettier --check "src/**/*.ts" "__tests__/**/*.ts"

# Run all checks (lint + format-check + test)
check: lint format-check test

# Development mode with TypeScript watch
dev:
    npm run dev

# Install dependencies
install:
    npm install
